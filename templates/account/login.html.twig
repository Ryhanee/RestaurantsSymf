{% extends 'base.html.twig' %}

{% block title %}Login {% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
<div class="container">
    <div class="row">
        <div class="col-3">&nbsp;</div>
        <div class="col-6">
            {% if haserror %}
            <div class="alert alert-danger">Une erreur est survenue , email ou mot de passe incorrecte</div>
            {% endif %}
            <div class="bg-light py-2 px-3">
                <h2>Connexion</h2>
        <form action="{{ path('account_login') }}" method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" name="_username" id="email" placeholder="Addresse mail..." class="form-control" required value="{{ username }}">
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="_password" id="password" placeholder="Password..." class="form-control" required>
            </div>
            <div class="form-group">
                <button class="btn btn-success" type="submit">Connexion!</button>
            </div>
        </form>
            </div>
    </div>
    </div>



</div>
{% endblock %}
