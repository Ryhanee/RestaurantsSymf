{% extends 'admin/base.html.twig' %}

{% block title %}Liste des menus {% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="container">
        <div class="row">
<div class="col-10">
            <h2>Liste des Menu</h2>
</div>
            <div class="col-2 ajout"><a href="{{ path('add_menu') }}">Ajouter</a> </div>

            <table class="table table-hover">
                <th>
                    <tr>
                        <td>id</td>
                        <td>Libelle</td>
                        <td></td>
                        <td></td>
                    </tr>
                </th>
                {% for menu in menus %}
                    <tr>
                        <td><a href="{{ path('show_menu', {'libelle':menu.libelle}) }}"> {{ menu.id }}</a></td>
                        <td>{{ menu.libelle }}</td>
                        <td><a href="{{ path("delete_menu", {'id' : menu.id}) }}" >Supprimer</a> </td>
                        <td><a href="{{ path("update_menu", {'id' : menu.id}) }}" >Modifier</a> </td>
                    </tr>
                {% endfor %}

            </table>

        </div>
    </div>
{% endblock %}
