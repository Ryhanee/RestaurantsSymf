{% extends 'admin/base.html.twig' %}

{% block title %}Liste des plats {% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="container">
        <div class="row">
<div class="col-10">
            <h1>Liste des plats</h1></div>
            <div class="col-2 ajout"><a href="{{ path('add_plat') }}">Ajouter</a> </div>

            <table class="table table-hover">
                <th>
                <tr>
                    <td>id</td>
                    <td>Libelle</td>
                    <td>Prix Unitaire</td>
                    <td>Menu</td>
                    <td></td>
                    <td></td>
                </tr>
                </th>
                {% for plat in plats %}
                    <tr>
                        <td>{{ plat.id }}</td>
                        <td>{{ plat.libelle }}</td>
                        <td> {{ plat.prixUnitaire }}</td>
                        <td><a href="{{ path('show_menu', {'libelle':plat.menus.libelle}) }}" >{{ plat.menus.libelle}}</a></td>
                        <td><a href="{{ path("delete_plat", {'id' : plat.id}) }}" >Supprimer</a> </td>
                        <td><a href="{{ path("update_plat", {'id' : plat.id}) }}" >Modifier</a> </td>
                    </tr>
                {% endfor %}

            </table>

        </div>
    </div>
{% endblock %}
